{
    "compilerOptions": {
        "target": "es6",
        "module": "Node16",
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "rootDir": "lib",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": ["lib"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}